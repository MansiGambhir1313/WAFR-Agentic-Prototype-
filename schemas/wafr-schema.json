          "keywords": ["cost", "billing", "budget", "FinOps"],
          "best_practices": [
            {
              "id": "COST_01_BP01",
              "text": "Set up cost allocation tags",
              "example_good_answer": "All resources are tagged with CostCenter, Environment, and Application tags. We use Cost Explorer to analyze spending by tag.",
              "keywords": ["cost allocation", "tags", "Cost Explorer"]
            }
          ],
          "hri_indicators": [],
