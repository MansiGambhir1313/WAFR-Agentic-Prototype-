          "best_practices": [
            {
              "id": "PERF_01_BP01",
              "text": "Right-size resources",
              "example_good_answer": "We use Compute Optimizer to recommend EC2 instance types. We regularly review and adjust based on utilization metrics.",
              "keywords": ["Compute Optimizer", "right-sizing"]
            }
          ],
          "hri_indicators": [],
          "related_services": ["Compute Optimizer", "CloudWatch"]
        }
      ]
    },
