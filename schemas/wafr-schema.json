      "description": "Minimize environmental impact",
      "questions": [
        {
          "id": "SUS_01",
          "text": "How do you select Regions?",
          "criticality": "medium",
          "category": "Region Selection",
          "keywords": ["regions", "sustainability", "carbon footprint"],
          "best_practices": [
            {
              "id": "SUS_01_BP01",
              "text": "Consider carbon footprint",
              "example_good_answer": "We prioritize regions with lower carbon intensity. We use AWS Carbon Footprint Tool to track emissions.",
              "keywords": ["carbon footprint", "sustainability"]
